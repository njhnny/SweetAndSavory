@{
  Layout = "_Layout";
}

@using SweetAndSavory.Models;
@model IEnumerable<SweetAndSavory.Models.Treat>

<h2>Welcome @User.Identity.Name</h2>
<br>

@if (Model.Any())
{
  <ul>
    @foreach (Treat treat in Model)
    {
      <li>@Html.ActionLink($"{treat.TreatName}", "Details", new { id = treat.TreatId })
      </li>
    }
  </ul>

} 
else
{
  <h3>No treats have been added yet</h3>
}
@if (User.Identity.IsAuthenticated)
{
  <p>@Html.ActionLink("Add new treat", "Create")</p>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>
